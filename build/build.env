OPT=`getopt d $*`
set -- $OPT
for i; do
  case $i in
    --) break ;;
    -d) DRY=true;;
  esac
  shift
done
shift

ARCH=`uname -m`
function run {
    echo '# ' $@
    if [ ! $DRY ];then
	"$@"
	if [ $? != 0 ]; then exit 1; fi
    fi
}
function run_edit {
    F=$1
    L=$2
    A=$3
    if [ "$A" = "1" ];then
	echo "# cat <<EOF
$L
EOF"
	if [ ! $DRY ];then
	    cat >> $F <<EOF
$L
EOF
	    if [ $? != 0 ]; then exit 1; fi
	fi
    else
	echo "# cat <<EOF
$L
EOF"
	if [ ! $DRY ];then
	    cat > $F <<EOF
$L
EOF
	    if [ $? != 0 ]; then exit 1; fi
	fi
    fi
}
function download {
    U=$1
    F=$2
    if [ "$F" = "" ]; then
	F=`basename $1` 
    fi
    echo "GETTING  $U ( $F )"
    if [ ! -f $F ];then
	run wget $U -O $F
    fi
}
function git_download {
    U=$1
    D=`basename $1 .git` 
    V=$2
    echo "GETTING  $U ( $V )"
    run rm -rf $D 
    run git clone $U
    pushd $D
    if [ "$V" != "" ]; then
        run git checkout -b $V $V
    fi	
    popd
}

